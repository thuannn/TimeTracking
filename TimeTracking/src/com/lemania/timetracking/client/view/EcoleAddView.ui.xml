<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label text="Ajouter une école"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Nom :"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="txtNom"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Adresse :"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="txtAdresse"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Activé :"/>
				</g:customCell>
				<g:customCell>
					<g:SimpleCheckBox checked="true" ui:field="chkActive"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label/>
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel width="136px">
						<g:Button text="Ajouter" ui:field="cmdAddEcole"/>
						<g:Button text="Annuler" ui:field="cmdCancel"/>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
