<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" height="">
			<g:Label text="AJOUTER UNE ECOLE" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
			<g:Grid width="400px" cellPadding="5">
			<g:row>
				<g:customCell>
					<g:Label text="Nom :"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="txtNom" width="250px"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Adresse :"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="txtAdresse" width="250px"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Active :"/>
				</g:customCell>
				<g:customCell>
					<g:SimpleCheckBox checked="true" ui:field="chkActive"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label/>
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel width="259px" horizontalAlignment="ALIGN_RIGHT">
						<g:Button text="Annuler" ui:field="cmdCancel" styleName="button-normal"/>
						<g:Button text="Ajouter" ui:field="cmdAddEcole" styleName="button-highlight"/>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
