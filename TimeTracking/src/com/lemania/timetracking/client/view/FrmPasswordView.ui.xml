<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:Label text="CHANGER LE MOT DE PASSE" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="."/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Le mot de passe actuel :" horizontalAlignment="ALIGN_LEFT"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="txtCurrentPassword"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Nouveau mot de passe :" horizontalAlignment="ALIGN_LEFT"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="txtNewPassword1"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Nouveau mot de passe confirmation :" horizontalAlignment="ALIGN_LEFT"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="txtNewPassword2"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="."/>
					</g:customCell>
					<g:customCell>
						<g:Button text="Enregistrer" ui:field="cmdSave"/>
					</g:customCell>
				</g:row>
				<g:row/>
			</g:Grid>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
