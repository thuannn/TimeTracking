<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:Label text="BIENVENUE" styleName="pageTitle" width="100%"/>
			<g:Grid width="" ui:field="panelLogin" styleName="sideBar">
				<g:row>
					<g:customCell>
						<g:Label text="Nom d&apos;utilisateur :" horizontalAlignment="ALIGN_LEFT"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="txtUserName" alignment="LEFT"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Mot de passe :" horizontalAlignment="ALIGN_LEFT"/>
					</g:customCell>
					<g:customCell>
						<g:PasswordTextBox ui:field="txtPassword" alignment="LEFT"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label/>
					</g:customCell>
					<g:customCell>
						<g:Button text="Se connecter" ui:field="cmdLogin"/>
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:Image url="images/Capture.PNG" width="339px" height="336px"/>
		</g:VerticalPanel></g:HTMLPanel>
</ui:UiBinder>
