<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%">
			<g:Label text="Liste de professeurs" styleName="pageTitle"/>
			<g:HorizontalPanel width="850px">
				<g:VerticalPanel width="400px">
					<p1:DataGrid width="400px" height="550px" ui:field="tblProfessors"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="400px">
					<g:Grid width="100%" styleName="sideBar">
						<g:row>
							<g:customCell>
								<g:Label text="Assigner un cours pour : " width=""/>
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="lblProfNameAssign"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Ecole : " width=""/>
							</g:customCell>
							<g:customCell>
								<g:ListBox ui:field="lstAddEcole"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Cours : " width=""/>
							</g:customCell>
							<g:customCell>
								<g:ListBox ui:field="lstAddCourse"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label/>
							</g:customCell>
							<g:customCell>
								<g:Button ui:field="cmdAddCourse">Ajouter</g:Button>
							</g:customCell>
						</g:row>
					</g:Grid>
					<g:FlowPanel height="20px"/>
					<g:HorizontalPanel width="100%" height="20px">
						<g:Label text="Liste des courses pris en charge : "/>
						<g:Label ui:field="lblProfName"/>
					</g:HorizontalPanel>
					<p1:DataGrid width="400px" height="400px" ui:field="tblAssignment"/>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
