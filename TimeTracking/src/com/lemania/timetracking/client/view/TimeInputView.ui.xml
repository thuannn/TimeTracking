<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" height="">
			<g:Label text="Mettre des heures" styleName="pageTitle" width=""/>
			<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="ALIGN_LEFT" borderWidth="0">
				<g:VerticalPanel width="300px" horizontalAlignment="ALIGN_CENTER">
					<g:Grid width="100%">
						<g:row>
					<g:customCell>
						<g:Label text="Ecoles : " visible="false"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstSchools" visible="false"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Départements :"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstCourses"/>
					</g:customCell>
				</g:row>
				<g:row/>
			</g:Grid>
					<p1:DataGrid width="300px" height="500px" ui:field="tblProfessors"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="600px">
					<g:Label text="."/>
					<g:Grid width="420px" borderWidth="0" cellPadding="5" cellSpacing="2" styleName="sideBar">
						<g:row>
							<g:customCell>
								<g:Label text="Professeur :"/>
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="lblProfName" width="" styleName="header"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Année :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox ui:field="lstYear"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Mois :"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox ui:field="lstMonth"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="."/>
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="txtNotification"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="."/>
							</g:customCell>
							<g:customCell>
								<g:Grid>
									<g:row>
										<g:customCell>
											<g:Label text="Cours :"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtCoursTime"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtCoursLog"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<g:Label text="Maladie/ACC"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtMaladieTime"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtMaladieNote"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
								<g:Label text="Fériés"/>
							</g:customCell>
										<g:customCell>
								<g:TextBox ui:field="txtFerieTime"/>
							</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtFerieNote"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<g:Label text="Privé"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtPriveTime"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtPriveNote"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<g:Label text="Supervision"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtSupervisionTime"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtSupervisionNote"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<g:Label text="Frais (CHF)"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtFraisAmount"/>
										</g:customCell>
										<g:customCell>
											<g:TextBox ui:field="txtFraisNote"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<g:Label text="."/>
										</g:customCell>
										<g:customCell>
											<g:Button ui:field="cmdSave" text="Entregistrer"/>
										</g:customCell>
									</g:row>
								</g:Grid>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Heures :"/>
							</g:customCell>
							<g:customCell>
								<p1:DataGrid width="550px" height="300px" ui:field="tblLog"/>
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
