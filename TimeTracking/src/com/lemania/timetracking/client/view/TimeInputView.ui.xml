<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" height="">
			<g:Label text="Mettre des heures" styleName="pageTitle" width=""/>
			<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="ALIGN_LEFT" borderWidth="0">
				<g:VerticalPanel width="400px">
					<g:Grid>
						<g:row>
					<g:customCell>
						<g:Label text="Ecoles : "/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstSchools"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Cours :"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstCourses"/>
					</g:customCell>
				</g:row>
				<g:row/>
			</g:Grid>
					<p1:DataGrid width="250px" height="200px" ui:field="tblProfessors"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="400px" styleName="sideBar">
					<g:Label ui:field="lblProfName" width=""/>
					<g:Grid width="100%" borderWidth="0" cellPadding="2" cellSpacing="2">
						<g:row>
							<g:customCell>
								<g:Label text="Date :"/>
							</g:customCell>
							<g:customCell>
								<p2:DatePicker ui:field="dtLogDate"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Cours :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogCourse"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Maladie :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogSick"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Fériés :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogHoliday"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Privé :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogPersonal"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Supervision :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogSupervision"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Frais (Fr$) :"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="txtLogFrais"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label/>
							</g:customCell>
							<g:customCell>
								<g:Button text="Enregistrer" ui:field="cmdSave"/>
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
