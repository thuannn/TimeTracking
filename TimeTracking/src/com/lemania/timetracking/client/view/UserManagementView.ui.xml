<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:Label text="Gestion des utilisateurs" styleName="pageTitle" width="900"/>
		<g:VerticalPanel width="100%">
			<g:HorizontalPanel width="100%" height="100%" verticalAlignment="ALIGN_BOTTOM">
			<g:Grid width="">
					<g:row>
						<g:customCell>
							<g:Label text="Nom &amp; Prénom :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtFullName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Nom d&apos;utilisateur :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtUserName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Mot de passe :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtPassword"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Email :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtEmail"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="."/>
						</g:customCell>
						<g:customCell>
							<g:Button text="Ajouter" ui:field="cmdAdd"/>
						</g:customCell>
					</g:row>
					<g:row/>
				</g:Grid>
			<g:Grid width="100%">
				<g:row>
					<g:customCell>
						<g:Label text="Ecoles :"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstAddEcole"/>
					</g:customCell>
				</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Départements :"/>
						</g:customCell>
						<g:customCell>
							<g:ListBox ui:field="lstAddCourse"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label/>
						</g:customCell>
						<g:customCell>
							<g:Button text="Assigner" ui:field="cmdAddCourse"/>
						</g:customCell>
					</g:row>
				</g:Grid>
		</g:HorizontalPanel>
			<g:HorizontalPanel width="100%">
				<p1:DataGrid width="400px" height="450px" ui:field="tblUser"/>
				<p1:DataGrid width="250px" height="450px" ui:field="tblDepartment"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
