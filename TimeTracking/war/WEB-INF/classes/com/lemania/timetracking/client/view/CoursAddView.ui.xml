<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:VerticalPanel width="100%">
			<g:Label text="AJOUTER UN NOUVEAU DEPARTEMENT" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
			<g:Grid cellPadding="5">
				<g:row>
					<g:customCell>
						<g:Label text="Nom du Département :"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox width="250px" ui:field="txtCoursNom"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Nom de l&apos;école :"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstEcoles"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Actif :"/>
					</g:customCell>
					<g:customCell>
						<g:CheckBox ui:field="chkActif" checked="true"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label/>
					</g:customCell>
					<g:customCell>
						<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
							<g:Button ui:field="cmdAnnuler" styleName="button-normal">Annuler</g:Button>
							<g:Button ui:field="cmdAjouter" styleName="button-highlight">Ajouter</g:Button>
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
